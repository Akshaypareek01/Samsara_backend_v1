            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"healthConditions\": [\n    {\n      \"name\": \"Hypertension\",\n      \"diagnosedYear\": 2020,\n      \"analysis\": \"High blood pressure requiring daily medication\",\n      \"isActive\": true\n    }\n  ],\n  \"medications\": [\n    {\n      \"type\": \"Prescription\",\n      \"name\": \"Lisinopril\",\n      \"dosage\": \"10mg\",\n      \"instruction\": \"Take once daily in the morning\",\n      \"quantityLeft\": 30,\n      \"frequency\": \"daily\",\n      \"times\": [\"08:00\"],\n      \"isActive\": true,\n      \"schedulePattern\": \"daily\",\n      \"daysOfWeek\": [\"Mon\", \"Tue\", \"Wed\", \"Thu\", \"Fri\", \"Sat\", \"Sun\"]\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{Base_url}}/medications/tracker",
              "host": ["{{Base_url}}"],
              "path": ["medications", "tracker"]
            }
          }
        },
