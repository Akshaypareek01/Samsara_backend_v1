{
  "info": {
    "name": "Meditation API",
    "description": "Complete API collection for Meditation management and retrieval",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "Base_url",
      "value": "http://localhost:3000/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Create Meditation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Mindful Breathing\",\n  \"description\": \"A guided meditation focusing on breath awareness\",\n  \"duration\": 15,\n  \"level\": \"Beginner\",\n  \"imageUrl\": \"https://example.com/images/mindful-breathing.jpg\",\n  \"audioUrl\": \"https://example.com/audio/mindful-breathing.mp3\",\n  \"category\": \"507f1f77bcf86cd799439011\",\n  \"tags\": [\"breathing\", \"mindfulness\", \"beginner\"],\n  \"benefits\": \"Reduces stress, improves focus, enhances emotional regulation\",\n  \"howToPractice\": [\n    \"Find a comfortable seated position\",\n    \"Close your eyes gently\",\n    \"Focus on your natural breath\",\n    \"When mind wanders, return to breath\"\n  ],\n  \"focus\": 85,\n  \"mood\": \"calm\",\n  \"recommended\": [\"507f1f77bcf86cd799439012\", \"507f1f77bcf86cd799439013\"],\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{Base_url}}/meditations",
          "host": ["{{Base_url}}"],
          "path": ["meditations"]
        }
      }
    },
    {
      "name": "Get All Meditations",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{Base_url}}/meditations?title=mindful&level=Beginner&mood=calm&category=507f1f77bcf86cd799439011&isActive=true&sortBy=duration:asc&limit=10&page=1",
          "host": ["{{Base_url}}"],
          "path": ["meditations"],
          "query": [
            {
              "key": "title",
              "value": "mindful",
              "description": "Meditation title filter"
            },
            {
              "key": "level",
              "value": "Beginner",
              "description": "Meditation level filter"
            },
            {
              "key": "mood",
              "value": "calm",
              "description": "Meditation mood filter"
            },
            {
              "key": "category",
              "value": "507f1f77bcf86cd799439011",
              "description": "Category ID filter"
            },
            {
              "key": "isActive",
              "value": "true",
              "description": "Active status filter"
            },
            {
              "key": "sortBy",
              "value": "duration:asc",
              "description": "Sort by duration ascending"
            },
            {
              "key": "limit",
              "value": "10",
              "description": "Maximum number of meditations"
            },
            {
              "key": "page",
              "value": "1",
              "description": "Page number"
            }
          ]
        }
      }
    },
    {
      "name": "Search Meditations",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{Base_url}}/meditations/search?searchTerm=breathing&sortBy=title:asc&limit=10&page=1",
          "host": ["{{Base_url}}"],
          "path": ["meditations", "search"],
          "query": [
            {
              "key": "searchTerm",
              "value": "breathing",
              "description": "Search term (required)"
            },
            {
              "key": "sortBy",
              "value": "title:asc",
              "description": "Sort by title ascending"
            },
            {
              "key": "limit",
              "value": "10",
              "description": "Maximum number of results"
            },
            {
              "key": "page",
              "value": "1",
              "description": "Page number"
            }
          ]
        }
      }
    },
    {
      "name": "Get Meditations by Category",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{Base_url}}/meditations/category/507f1f77bcf86cd799439011?sortBy=duration:asc&limit=10&page=1",
          "host": ["{{Base_url}}"],
          "path": ["meditations", "category", "507f1f77bcf86cd799439011"],
          "query": [
            {
              "key": "sortBy",
