    {
      "name": "Get Meditations by Mood",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{Base_url}}/meditations/mood/calm?sortBy=duration:asc&limit=10&page=1",
          "host": ["{{Base_url}}"],
          "path": ["meditations", "mood", "calm"],
          "query": [
            {
              "key": "sortBy",
              "value": "duration:asc",
              "description": "Sort by duration ascending"
