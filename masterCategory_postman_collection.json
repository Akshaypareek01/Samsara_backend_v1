{
  "info": {
    "name": "Master Category API",
    "description": "Complete API collection for Master Category management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "Base_url",
      "value": "http://localhost:3000/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Create Master Category",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Yoga & Wellness\",\n  \"description\": \"Comprehensive yoga and wellness practices\",\n  \"imageUrl\": \"https://example.com/images/yoga.jpg\",\n  \"soundUrl\": \"https://example.com/sounds/meditation.mp3\",\n  \"tags\": [\"yoga\", \"wellness\", \"mindfulness\"],\n  \"order\": 1,\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{Base_url}}/master-categories",
          "host": ["{{Base_url}}"],
          "path": ["master-categories"]
        }
      }
    },
    {
      "name": "Get All Master Categories",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{Base_url}}/master-categories?name=yoga&isActive=true&sortBy=order:asc&limit=10&page=1",
          "host": ["{{Base_url}}"],
          "path": ["master-categories"],
          "query": [
            {
              "key": "name",
              "value": "yoga",
              "description": "Category name filter"
            },
            {
              "key": "isActive",
              "value": "true",
              "description": "Active status filter"
            },
            {
              "key": "sortBy",
              "value": "order:asc",
              "description": "Sort by order ascending"
            },
            {
              "key": "limit",
              "value": "10",
              "description": "Maximum number of categories"
            },
            {
              "key": "page",
              "value": "1",
              "description": "Page number"
            }
          ]
        }
      }
    },
    {
      "name": "Get Active Master Categories",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{Base_url}}/master-categories/active?sortBy=order:asc&limit=20&page=1",
          "host": ["{{Base_url}}"],
          "path": ["master-categories", "active"],
          "query": [
            {
              "key": "sortBy",
              "value": "order:asc",
              "description": "Sort by order ascending"
            },
            {
              "key": "limit",
              "value": "20",
              "description": "Maximum number of categories"
            },
            {
              "key": "page",
              "value": "1",
              "description": "Page number"
            }
          ]
        }
      }
    },
    {
      "name": "Search Master Categories",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{Base_url}}/master-categories/search?searchTerm=wellness&sortBy=name:asc&limit=10&page=1",
          "host": ["{{Base_url}}"],
          "path": ["master-categories", "search"],
          "query": [
            {
              "key": "searchTerm",
              "value": "wellness",
              "description": "Search term (required)"
            },
            {
              "key": "sortBy",
              "value": "name:asc",
              "description": "Sort by name ascending"
            },
            {
              "key": "limit",
              "value": "10",
              "description": "Maximum number of results"
            },
            {
              "key": "page",
              "value": "1",
              "description": "Page number"
            }
          ]
        }
      }
    },
    {
      "name": "Update Category Order",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderData\": [\n    {\n      \"id\": \"507f1f77bcf86cd799439011\",\n      \"order\": 1\n    },\n    {\n      \"id\": \"507f1f77bcf86cd799439012\",\n      \"order\": 2\n    },\n    {\n      \"id\": \"507f1f77bcf86cd799439013\",\n      \"order\": 3\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{Base_url}}/master-categories/order",
          "host": ["{{Base_url}}"],
          "path": ["master-categories", "order"]
        }
      }
    },
    {
      "name": "Get Master Category by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{Base_url}}/master-categories/507f1f77bcf86cd799439011",
          "host": ["{{Base_url}}"],
          "path": ["master-categories", "507f1f77bcf86cd799439011"]
        }
      }
    },
    {
      "name": "Update Master Category",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Yoga & Wellness\",\n  \"description\": \"Updated comprehensive yoga and wellness practices\",\n  \"imageUrl\": \"https://example.com/images/updated-yoga.jpg\",\n  \"soundUrl\": \"https://example.com/sounds/updated-meditation.mp3\",\n  \"tags\": [\"yoga\", \"wellness\", \"mindfulness\", \"updated\"],\n  \"order\": 2,\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{Base_url}}/master-categories/507f1f77bcf86cd799439011",
          "host": ["{{Base_url}}"],
          "path": ["master-categories", "507f1f77bcf86cd799439011"]
        }
      }
    },
    {
      "name": "Delete Master Category",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{Base_url}}/master-categories/507f1f77bcf86cd799439011",
          "host": ["{{Base_url}}"],
          "path": ["master-categories", "507f1f77bcf86cd799439011"]
        }
      }
    }
  ]
} 