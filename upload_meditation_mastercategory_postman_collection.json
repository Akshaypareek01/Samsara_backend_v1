                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                }
              ]
            },
            "description": "Get all meditations by level (Beginner, Intermediate, Advanced, All Levels)"
          },
          "response": []
        },
        {
          "name": "Get Meditations by Mood",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/meditations/mood/calm?sortBy=duration:asc&limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["meditations", "mood", "calm"],
              "query": [
                {
                  "key": "sortBy",
                  "value": "duration:asc",
                  "description": "Sort by field:desc/asc"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Maximum number of results"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                }
              ]
            },
            "description": "Get all meditations by mood"
          },
          "response": []
        },
        {
          "name": "Get Single Meditation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/meditations/{{meditationId}}",
              "host": ["{{baseUrl}}"],
              "path": ["meditations", "{{meditationId}}"]
            },
            "description": "Get a specific meditation by ID"
          },
          "response": []
        },
        {
          "name": "Update Meditation",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Morning Mindfulness\",\n  \"description\": \"Updated description for morning meditation\",\n  \"duration\": 20,\n  \"level\": \"Intermediate\",\n  \"imageUrl\": \"https://example.com/updated-image.jpg\",\n  \"audioUrl\": \"https://example.com/updated-audio.mp3\",\n  \"category\": \"{{categoryId}}\",\n  \"tags\": [\"morning\", \"mindfulness\", \"intermediate\"],\n  \"benefits\": \"Updated benefits description\",\n  \"howToPractice\": [\n    \"Find a quiet place\",\n    \"Sit comfortably\",\n    \"Close your eyes\",\n    \"Focus on your breath\",\n    \"Practice daily\"\n  ],\n  \"focus\": 90,\n  \"mood\": \"peaceful\",\n  \"recommended\": [\"{{meditationId}}\"],\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/meditations/{{meditationId}}",
              "host": ["{{baseUrl}}"],
              "path": ["meditations", "{{meditationId}}"]
            },
            "description": "Update a meditation (Admin only)"
          },
          "response": []
        },
        {
          "name": "Delete Meditation",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/meditations/{{meditationId}}",
              "host": ["{{baseUrl}}"],
              "path": ["meditations", "{{meditationId}}"]
            },
            "description": "Delete a meditation (Admin only)"
          },
          "response": []
        },
        {
          "name": "Get Recommended Meditations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/meditations/{{meditationId}}/recommended?sortBy=title:asc&limit=5&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["meditations", "{{meditationId}}", "recommended"],
              "query": [
                {
                  "key": "sortBy",
                  "value": "title:asc",
                  "description": "Sort by field:desc/asc"
                },
                {
                  "key": "limit",
                  "value": "5",
                  "description": "Maximum number of results"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                }
              ]
            },
            "description": "Get recommended meditations based on a specific meditation"
          },
          "response": []
        }
      ]
    },
    {
