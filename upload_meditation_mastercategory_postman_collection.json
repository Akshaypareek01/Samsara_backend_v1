{
  "info": {
    "name": "Samsara Backend v1 - Upload, Meditation & Master Category APIs",
    "description": "Complete Postman collection for Upload, Meditation, and Master Category management APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "baseUrl": "https://samsara-backend-v1.onrender.com/v1"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "authToken",
      "value": "your_jwt_token_here",
      "type": "string"
    },
    {
      "key": "meditationId",
      "value": "meditation_object_id_here",
      "type": "string"
    },
    {
      "key": "categoryId",
      "value": "category_object_id_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Upload APIs",
      "item": [
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "multipart/form-data"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/upload",
              "host": ["{{baseUrl}}"],
              "path": ["upload"]
            },
            "description": "Upload a file (max 5MB) and get back the URL and filename"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Meditation APIs",
      "item": [
        {
          "name": "Create Meditation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Morning Mindfulness\",\n  \"description\": \"A peaceful morning meditation to start your day\",\n  \"duration\": 15,\n  \"level\": \"Beginner\",\n  \"imageUrl\": \"https://example.com/image.jpg\",\n  \"audioUrl\": \"https://example.com/audio.mp3\",\n  \"category\": \"{{categoryId}}\",\n  \"tags\": [\"morning\", \"mindfulness\", \"beginner\"],\n  \"benefits\": \"Reduces stress, improves focus, promotes calmness\",\n  \"howToPractice\": [\n    \"Find a quiet place\",\n    \"Sit comfortably\",\n    \"Close your eyes\",\n    \"Focus on your breath\"\n  ],\n  \"focus\": 85,\n  \"mood\": \"calm\",\n  \"recommended\": [\"{{meditationId}}\"],\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/meditations",
              "host": ["{{baseUrl}}"],
              "path": ["meditations"]
            },
            "description": "Create a new meditation (Admin only)"
          },
          "response": []
        },
        {
          "name": "Get All Meditations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/meditations?title=morning&level=Beginner&mood=calm&category={{categoryId}}&isActive=true&sortBy=createdAt:desc&limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["meditations"],
              "query": [
                {
                  "key": "title",
                  "value": "morning",
                  "description": "Filter by meditation title"
                },
                {
                  "key": "level",
                  "value": "Beginner",
                  "description": "Filter by level (Beginner, Intermediate, Advanced, All Levels)"
                },
                {
                  "key": "mood",
                  "value": "calm",
                  "description": "Filter by mood"
                },
                {
                  "key": "category",
                  "value": "{{categoryId}}",
                  "description": "Filter by category ID"
                },
                {
                  "key": "isActive",
                  "value": "true",
                  "description": "Filter by active status"
                },
                {
                  "key": "sortBy",
                  "value": "createdAt:desc",
                  "description": "Sort by field:desc/asc"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Maximum number of results"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                }
              ]
            },
            "description": "Get all meditations with optional filtering and pagination"
          },
          "response": []
        },
        {
          "name": "Search Meditations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/meditations/search?searchTerm=mindfulness&sortBy=title:asc&limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["meditations", "search"],
              "query": [
                {
                  "key": "searchTerm",
                  "value": "mindfulness",
                  "description": "Search term to look for in title, description, tags"
                },
                {
                  "key": "sortBy",
                  "value": "title:asc",
                  "description": "Sort by field:desc/asc"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Maximum number of results"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                }
              ]
            },
            "description": "Search meditations by term"
          },
          "response": []
        },
        {
          "name": "Get Meditations by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/meditations/category/{{categoryId}}?sortBy=duration:asc&limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["meditations", "category", "{{categoryId}}"],
              "query": [
                {
                  "key": "sortBy",
                  "value": "duration:asc",
                  "description": "Sort by field:desc/asc"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Maximum number of results"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                }
              ]
            },
            "description": "Get all meditations in a specific category"
          },
          "response": []
        },
        {
          "name": "Get Meditations by Level",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/meditations/level/Beginner?sortBy=title:asc&limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["meditations", "level", "Beginner"],
