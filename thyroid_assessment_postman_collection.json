{
  "info": {
    "name": "Thyroid Assessment API",
    "description": "Collection for testing Thyroid Assessment API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "your-jwt-token-here",
      "type": "string"
    },
    {
      "key": "assessmentId",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Get Assessment Questions",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/thyroid-assessment/questions",
          "host": ["{{baseUrl}}"],
          "path": ["thyroid-assessment", "questions"]
        },
        "description": "Get all thyroid assessment questions and options"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has questions array\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.questions).to.be.an('array');",
              "    pm.expect(jsonData.data.questions.length).to.equal(20);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Assessment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"answers\": {\n    \"bowelMovements\": \"Regular\",\n    \"acidity\": \"No\",\n    \"heatIntolerance\": \"No\",\n    \"weightIssues\": \"Weight Gain\",\n    \"coldSensitivity\": \"Yes\",\n    \"appetite\": \"Low\",\n    \"jointStiffness\": \"Yes\",\n    \"facialSwelling\": \"Sometimes\",\n    \"anxiety\": \"No\",\n    \"sleepPattern\": \"7–8 hrs\",\n    \"drySkinHair\": \"Normal\",\n    \"nails\": \"Healthy\",\n    \"sweating\": \"Normal\",\n    \"voiceHoarseness\": \"Absent\",\n    \"pastIllness\": [\"Diabetes\"],\n    \"pastIllnessOther\": \"\",\n    \"familyHistory\": [\"None\"],\n    \"thyroidProfileChecked\": \"No\",\n    \"hairThinning\": \"No\",\n    \"heartRate\": \"Normal\",\n    \"neckSwelling\": \"No\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/thyroid-assessment/",
          "host": ["{{baseUrl}}"],
          "path": ["thyroid-assessment", ""]
        },
        "description": "Create a new thyroid assessment"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response has assessment data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.assessment).to.be.an('object');",
              "    pm.expect(jsonData.data.assessment._id).to.exist;",
              "    pm.expect(jsonData.data.assessment.totalScore).to.be.a('number');",
              "    pm.expect(jsonData.data.assessment.riskLevel).to.be.a('string');",
              "});",
              "",
              "// Extract assessment ID for other requests",
              "if (pm.response.code === 201) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set(\"assessmentId\", jsonData.data.assessment._id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Latest Assessment",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/thyroid-assessment/latest",
          "host": ["{{baseUrl}}"],
          "path": ["thyroid-assessment", "latest"]
        },
        "description": "Get the latest thyroid assessment for the user"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has assessment data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.assessment).to.be.an('object');",
              "    pm.expect(jsonData.data.assessment.totalScore).to.be.a('number');",
              "    pm.expect(jsonData.data.assessment.riskLevel).to.be.a('string');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Assessment History",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/thyroid-assessment/history?page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["thyroid-assessment", "history"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "description": "Get assessment history with pagination"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has pagination data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.assessments).to.be.an('array');",
              "    pm.expect(jsonData.data.totalPages).to.be.a('number');",
              "    pm.expect(jsonData.data.currentPage).to.be.a('number');",
              "    pm.expect(jsonData.data.total).to.be.a('number');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Assessment by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/thyroid-assessment/{{assessmentId}}",
          "host": ["{{baseUrl}}"],
          "path": ["thyroid-assessment", "{{assessmentId}}"]
        },
        "description": "Get a specific assessment by ID"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has assessment data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.assessment).to.be.an('object');",
              "    pm.expect(jsonData.data.assessment._id).to.equal(pm.collectionVariables.get(\"assessmentId\"));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Update Assessment",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"answers\": {\n    \"bowelMovements\": \"Irregular\",\n    \"acidity\": \"Sometimes\",\n    \"heatIntolerance\": \"No\",\n    \"weightIssues\": \"Weight Gain\",\n    \"coldSensitivity\": \"Yes\",\n    \"appetite\": \"Low\",\n    \"jointStiffness\": \"Yes\",\n    \"facialSwelling\": \"Sometimes\",\n    \"anxiety\": \"No\",\n    \"sleepPattern\": \"Disturbed Sleep Pattern\",\n    \"drySkinHair\": \"Normal\",\n    \"nails\": \"Healthy\",\n    \"sweating\": \"Normal\",\n    \"voiceHoarseness\": \"Absent\",\n    \"pastIllness\": [\"Diabetes\"],\n    \"pastIllnessOther\": \"\",\n    \"familyHistory\": [\"None\"],\n    \"thyroidProfileChecked\": \"No\",\n    \"hairThinning\": \"No\",\n    \"heartRate\": \"Normal\",\n    \"neckSwelling\": \"No\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/thyroid-assessment/{{assessmentId}}",
          "host": ["{{baseUrl}}"],
          "path": ["thyroid-assessment", "{{assessmentId}}"]
        },
        "description": "Update an existing assessment"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Assessment was updated\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.assessment.answers.bowelMovements).to.equal(\"Irregular\");",
              "    pm.expect(jsonData.data.assessment.answers.acidity).to.equal(\"Sometimes\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Calculate Risk Level",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"answers\": {\n    \"bowelMovements\": \"Regular\",\n    \"acidity\": \"No\",\n    \"heatIntolerance\": \"No\",\n    \"weightIssues\": \"Weight Gain\",\n    \"coldSensitivity\": \"Yes\",\n    \"appetite\": \"Low\",\n    \"jointStiffness\": \"Yes\",\n    \"facialSwelling\": \"Sometimes\",\n    \"anxiety\": \"No\",\n    \"sleepPattern\": \"7–8 hrs\",\n    \"drySkinHair\": \"Normal\",\n    \"nails\": \"Healthy\",\n    \"sweating\": \"Normal\",\n    \"voiceHoarseness\": \"Absent\",\n    \"pastIllness\": [\"Diabetes\"],\n    \"pastIllnessOther\": \"\",\n    \"familyHistory\": [\"None\"],\n    \"thyroidProfileChecked\": \"No\",\n    \"hairThinning\": \"No\",\n    \"heartRate\": \"Normal\",\n    \"neckSwelling\": \"No\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/thyroid-assessment/calculate-risk",
          "host": ["{{baseUrl}}"],
          "path": ["thyroid-assessment", "calculate-risk"]
        },
        "description": "Calculate risk level without saving assessment"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has risk calculation\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.totalScore).to.be.a('number');",
              "    pm.expect(jsonData.data.riskLevel).to.be.a('string');",
              "    pm.expect(jsonData.data.recommendations).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Submit Reassessment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"answers\": {\n    \"bowelMovements\": \"Constipated (>3 days)\",\n    \"acidity\": \"Yes\",\n    \"heatIntolerance\": \"Yes\",\n    \"weightIssues\": \"Weight Gain\",\n    \"coldSensitivity\": \"Yes\",\n    \"appetite\": \"Low\",\n    \"jointStiffness\": \"Yes\",\n    \"facialSwelling\": \"Yes\",\n    \"anxiety\": \"Yes\",\n    \"sleepPattern\": \"Difficulty in Sleeping\",\n    \"drySkinHair\": \"Extremely Dry\",\n    \"nails\": \"Brittle\",\n    \"sweating\": \"Absent\",\n    \"voiceHoarseness\": \"Present\",\n    \"pastIllness\": [\"Diabetes\", \"Hypertension\"],\n    \"pastIllnessOther\": \"\",\n    \"familyHistory\": [\"Mother\", \"Father\"],\n    \"thyroidProfileChecked\": \"No\",\n    \"hairThinning\": \"Yes\",\n    \"heartRate\": \"Too slow\",\n    \"neckSwelling\": \"Yes\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/thyroid-assessment/reassessment",
          "host": ["{{baseUrl}}"],
          "path": ["thyroid-assessment", "reassessment"]
        },
        "description": "Submit a new reassessment"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"New assessment created\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.assessment._id).to.exist;",
              "    pm.expect(jsonData.data.assessment.riskLevel).to.equal(\"High\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
