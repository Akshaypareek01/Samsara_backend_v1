{
  "info": {
    "name": "Samsara User Routes",
    "description": "Complete collection of user management and profile routes for Samsara backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "Base_url",
      "value": "http://localhost:3000/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "your_jwt_token_here",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "user_id_here",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Profile Management",
      "item": [
        {
          "name": "Get Current User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/users/profile",
              "host": ["{{Base_url}}"],
              "path": ["users", "profile"]
            }
          }
        },
        {
          "name": "Update Current User Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"mobile\": \"+1234567890\",\n  \"gender\": \"male\",\n  \"dob\": \"1990-01-01\",\n  \"age\": \"33\",\n  \"Address\": \"123 Main St\",\n  \"city\": \"New York\",\n  \"pincode\": \"10001\",\n  \"country\": \"USA\",\n  \"height\": \"175cm\",\n  \"weight\": \"70kg\",\n  \"targetWeight\": \"65kg\",\n  \"bodyshape\": \"athletic\",\n  \"weeklyyogaplan\": \"3 times per week\",\n  \"practicetime\": \"morning\",\n  \"focusarea\": [\"flexibility\", \"strength\"],\n  \"goal\": [\"weight loss\", \"stress relief\"],\n  \"health_issues\": [\"back pain\"],\n  \"howyouknowus\": \"social media\",\n  \"PriorExperience\": \"beginner\",\n  \"description\": \"Yoga enthusiast\",\n  \"achievements\": [\"completed 30-day challenge\"],\n  \"userCategory\": \"Personal\",\n  \"teacherCategory\": \"Yoga Trainer\",\n  \"teachingExperience\": \"5 years\",\n  \"expertise\": [\"Hatha Yoga\", \"Vinyasa\"],\n  \"qualification\": [{\n    \"degree\": \"Yoga Certification\",\n    \"institution\": \"Yoga Alliance\",\n    \"year\": \"2020\"\n  }],\n  \"additional_courses\": [{\n    \"course\": \"Advanced Asanas\",\n    \"institution\": \"Yoga Institute\",\n    \"year\": \"2021\"\n  }],\n  \"company_name\": \"{{companyId}}\",\n  \"companyId\": \"corp123\",\n  \"corporate_id\": \"emp456\"\n}"
            },
            "url": {
              "raw": "{{Base_url}}/users/profile",
              "host": ["{{Base_url}}"],
              "path": ["users", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "User Management (Admin Only)",
      "item": [
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Smith\",\n  \"email\": \"jane.smith@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{Base_url}}/users",
              "host": ["{{Base_url}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/users?name=John&role=user&sortBy=name:asc&limit=10&page=1",
              "host": ["{{Base_url}}"],
              "path": ["users"],
              "query": [
                {
                  "key": "name",
                  "value": "John",
                  "description": "Filter by user name"
                },
                {
                  "key": "role",
                  "value": "user",
                  "description": "Filter by user role"
                },
                {
                  "key": "sortBy",
                  "value": "name:asc",
                  "description": "Sort by field:asc/desc"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Number of users per page"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                }
              ]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/users/{{userId}}",
              "host": ["{{Base_url}}"],
              "path": ["users", "{{userId}}"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"email\": \"updated@example.com\",\n  \"password\": \"NewPassword123!\"\n}"
            },
            "url": {
              "raw": "{{Base_url}}/users/{{userId}}",
              "host": ["{{Base_url}}"],
              "path": ["users", "{{userId}}"]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/users/{{userId}}",
              "host": ["{{Base_url}}"],
              "path": ["users", "{{userId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "User Profile (Public)",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{Base_url}}/users/{{userId}}/profile",
              "host": ["{{Base_url}}"],
              "path": ["users", "{{userId}}", "profile"]
            }
          }
        }
      ]
    },
