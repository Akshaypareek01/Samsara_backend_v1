          }
        },
        {
          "name": "Delete User Image by Index",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/users/{{userId}}/images/0",
              "host": ["{{Base_url}}"],
              "path": ["users", "{{userId}}", "images", "0"]
            }
          }
        },
        {
          "name": "Delete User Image by Key",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"key\": \"user_profile_123\"\n}"
            },
            "url": {
              "raw": "{{Base_url}}/users/{{userId}}/images",
              "host": ["{{Base_url}}"],
              "path": ["users", "{{userId}}", "images"]
            }
          }
        },
        {
          "name": "Delete User Image by Filename",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"filename\": \"profile_image.jpg\"\n}"
            },
            "url": {
              "raw": "{{Base_url}}/users/{{userId}}/images/delete-by-filename",
              "host": ["{{Base_url}}"],
              "path": ["users", "{{userId}}", "images", "delete-by-filename"]
            }
          }
        }
      ]
    },
