{
  "info": {
    "name": "Question Master API",
    "description": "API collection for Question Master and Assessment functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "Base_url",
      "value": "http://localhost:3000/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Question Master (Admin)",
      "item": [
        {
          "name": "Create Question",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"What is your body type?\",\n  \"options\": [\n    {\n      \"text\": \"Thin and lean\",\n      \"dosha\": \"vata\"\n    },\n    {\n      \"text\": \"Medium build\",\n      \"dosha\": \"pitta\"\n    },\n    {\n      \"text\": \"Large and heavy\",\n      \"dosha\": \"kapha\"\n    }\n  ],\n  \"assessmentType\": \"dosha\",\n  \"order\": 1,\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{Base_url}}/question-master/questions",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "questions"]
            }
          }
        },
        {
          "name": "Get Questions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/question-master/questions?assessmentType=dosha&isActive=true",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "questions"],
              "query": [
                {
                  "key": "assessmentType",
                  "value": "dosha",
                  "description": "Type of assessment (optional)"
                },
                {
                  "key": "isActive",
                  "value": "true",
                  "description": "Filter by active status (optional)"
                }
              ]
            }
          }
        },
        {
          "name": "Get Question by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/question-master/questions/:questionId",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "questions", ":questionId"],
              "variable": [
                {
                  "key": "questionId",
                  "value": "QUESTION_ID_HERE",
                  "description": "ID of the question to retrieve"
                }
              ]
            }
          }
        },
        {
          "name": "Update Question",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"Updated question text\",\n  \"options\": [\n    {\n      \"text\": \"Updated option 1\",\n      \"dosha\": \"vata\"\n    },\n    {\n      \"text\": \"Updated option 2\",\n      \"dosha\": \"pitta\"\n    }\n  ],\n  \"order\": 2,\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{Base_url}}/question-master/questions/:questionId",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "questions", ":questionId"],
              "variable": [
                {
                  "key": "questionId",
                  "value": "QUESTION_ID_HERE",
                  "description": "ID of the question to update"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Question",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/question-master/questions/:questionId",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "questions", ":questionId"],
              "variable": [
                {
                  "key": "questionId",
                  "value": "QUESTION_ID_HERE",
                  "description": "ID of the question to delete"
                }
              ]
            }
          }
        },
        {
          "name": "Toggle Question Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/question-master/questions/:questionId/toggle",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "questions", ":questionId", "toggle"],
              "variable": [
                {
                  "key": "questionId",
                  "value": "QUESTION_ID_HERE",
                  "description": "ID of the question to toggle status"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Assessment (Users)",
      "item": [
        {
          "name": "Start Assessment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"assessmentType\": \"dosha\"\n}"
            },
            "url": {
              "raw": "{{Base_url}}/question-master/assessments/start",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "assessments", "start"]
            }
          }
        },
        {
          "name": "Submit Answer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"assessmentId\": \"ASSESSMENT_ID_HERE\",\n  \"questionId\": \"QUESTION_ID_HERE\",\n  \"selectedOptionIndex\": 0\n}"
            },
            "url": {
              "raw": "{{Base_url}}/question-master/assessments/submit-answer",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "assessments", "submit-answer"]
            }
          }
        },
        {
          "name": "Calculate Dosha Score",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/question-master/assessments/:assessmentId/calculate",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "assessments", ":assessmentId", "calculate"],
              "variable": [
                {
                  "key": "assessmentId",
                  "value": "ASSESSMENT_ID_HERE",
                  "description": "ID of the assessment to calculate scores for"
                }
              ]
            }
          }
        },
        {
          "name": "Get Assessment Results",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/question-master/assessments?assessmentType=dosha",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "assessments"],
              "query": [
                {
                  "key": "assessmentType",
                  "value": "dosha",
                  "description": "Type of assessment (optional)"
                }
              ]
            }
          }
        },
        {
          "name": "Get Assessment by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/question-master/assessments/:assessmentId",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "assessments", ":assessmentId"],
              "variable": [
                {
                  "key": "assessmentId",
                  "value": "ASSESSMENT_ID_HERE",
                  "description": "ID of the assessment to retrieve"
                }
              ]
            }
          }
        },
        {
          "name": "Get Assessment Questions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/question-master/questions/:assessmentType",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "questions", ":assessmentType"],
              "variable": [
                {
                  "key": "assessmentType",
                  "value": "dosha",
                  "description": "Type of assessment"
                }
              ]
            }
          }
        },
        {
          "name": "Get Assessment Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{Base_url}}/question-master/assessments/stats",
              "host": ["{{Base_url}}"],
              "path": ["question-master", "assessments", "stats"]
            }
          }
        }
      ]
    }
  ]
} 